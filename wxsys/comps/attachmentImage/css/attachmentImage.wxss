.contentView{
  width: 100%;
  text-align: center;
  margin-top: 200rpx;
}
.recordView{
  position: relative;
  width: 120rpx;
  height:100rpx;
  background-color: #6AA84F;
  border-radius: 50%;
  margin:0 auto;
}
.talkView{
  text-align: center;
  display: block;
  color: #999 ;
  margin-bottom: 25rpx;
}
.record{
  width: 55rpx;
  height: 55rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.popUpView{
  width: 100%;
  height: 500rpx;
  position: fixed;
  bottom: 0 ;
  z-index: 100;
  background-color: #fff;
  border-top: 1px solid #ccc ;
  animation: sport 1s;
  transform: translateY(0rpx) 
}
@keyframes sport {
  0% {transform: translateY(500rpx)}
  100% {transform: translateY(0rpx)}

}
.popViewHigh{
  width: 100%;
  height: 500rpx;
  position: fixed;
  bottom: 0 ;
  border-top: 1px solid #ccc ;
  display: none;
}
.closePopUp{
  text-align: right;
  margin-right: 50rpx;
 font-size: 50rpx;
 color: #999;
}


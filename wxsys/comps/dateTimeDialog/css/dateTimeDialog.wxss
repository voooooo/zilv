.popwindow{position:fixed; left: 0; top: 0; width: 100%; height: 100%;background:rgba(0,0,0,0.5);z-index: 999;}
.picker-datetime {
	text-align: center; 
	background:#fff;
	width: 100%;
	left:0; 
	bottom: 0;
	height: 279px; 
	font-size: 14px;
	position: fixed; 
}
.picker-datetime .dateWrap{width: 100%; height: 238px;}

.picker-datetime .pickerViewMethod{height: 41px; line-height: 41px; background: #FBF9FE; position: relative; z-index: 99;font-size:16px;width: 100%; color: #586C94}
.picker-datetime .pickerViewMethod .dt-cancel-btn{float: left;display: inline-block; width: 50px;text-align: center}
.picker-datetime .pickerViewMethod .dt-value{display: inline-block; text-align: center;color:#999}
.picker-datetime .pickerViewMethod .dt-ok-btn{float: right; display: inline-block;  width: 50px; text-align: center; color:red}


.picker-datetime .datetime-column {
	line-height:34px; 
	border-right:1px #FBF9FE solid;
}

.picker-datetime .year-column {
	flex: 1.5;
}
